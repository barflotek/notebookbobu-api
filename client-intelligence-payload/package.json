{
  "name": "client-intelligence-payload",
  "version": "1.0.0",
  "description": "Client Intelligence System powered by Payload CMS",
  "main": "src/server.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc",
    "build:payload": "cross-env NODE_ENV=production payload build",
    "start": "node build/server.js",
    "serve": "cross-env NODE_ENV=production payload serve",
    "generate:types": "cross-env NODE_ENV=development payload generate:types",
    "generate:graphQLSchema": "cross-env NODE_ENV=development payload generate:graphQLSchema",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "payload",
    "cms",
    "client-intelligence",
    "crm",
    "ai",
    "behavioral-analytics"
  ],
  "dependencies": {
    "@payloadcms/bundler-webpack": "^1.0.7",
    "@payloadcms/db-mongodb": "^1.7.5",
    "@payloadcms/richtext-slate": "^1.5.2",
    "@types/node": "^20.19.14",
    "axios": "^1.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "mongodb": "^5.9.2",
    "node-cron": "^3.0.2",
    "openai": "^4.0.0",
    "payload": "^2.32.3",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node-cron": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2"
  },
  "nodemonConfig": {
    "exec": "ts-node src/server.ts",
    "ext": "ts,js,json",
    "ignore": [
      "build/*"
    ]
  },
  "author": "",
  "license": "ISC"
}
